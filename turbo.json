{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": ["ANDROID_HOME", "ANDROID_SDK_ROOT", "JAVA_HOME"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "codegen"],
      "outputs": ["lib/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "format": {},
    "format:check": {},
    "clean": {
      "cache": false
    },
    "codegen": {
      "inputs": ["src/**/*.nitro.ts", "nitro.json", "package.json"],
      "outputs": ["nitrogen/generated/**"]
    },
    "typecheck": {},
    "test": {},
    "test:coverage": {
      "outputs": ["coverage/**"]
    },
    "benchmark": {
      "dependsOn": ["build"],
      "cache": false
    },
    "prebuild": {
      "cache": false
    },
    "prebuild:clean": {
      "cache": false
    },
    "ios": {
      "cache": false
    },
    "android": {
      "cache": false
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test:cpp": {
      "cache": false
    }
  }
}
